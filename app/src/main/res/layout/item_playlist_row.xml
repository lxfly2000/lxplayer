<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewPlaylistName"
            android:minHeight="@dimen/item_height"
            android:layout_margin="@dimen/text_margin"
            android:gravity="center_vertical"
            android:textColor="@color/colorListItem"
            android:textSize="@dimen/item_font_size"
            android:text="@string/title_saved_playlist"/>
    <CheckBox
            android:text="@string/title_saved_playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/checkBoxPlaylistName"
            android:minHeight="@dimen/item_height"
            android:textColor="@color/colorListItem"
            android:textSize="@dimen/item_font_size"
            android:layout_margin="@dimen/text_margin"/>
</LinearLayout>